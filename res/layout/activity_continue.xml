<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2040B8" >

    <TextView
        android:id="@+id/gradugation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/saved_game"
        android:textColor="#E67022"
        android:textSize="32sp" />

    <Button
        android:id="@+id/btn_saved_game1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/gradugation_text"
        android:layout_marginTop="48dp"
        android:text="@string/saved_game1" />

    <Button
        android:id="@+id/btn_saved_game2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_saved_game1"
        android:text="@string/saved_game2" />

</RelativeLayout>
