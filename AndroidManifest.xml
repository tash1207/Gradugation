<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gradugation"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.gradugation.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gradugation.NewGameActivity"
            android:label="@string/title_activity_new_game" >
        </activity>
        <activity
            android:name="com.gradugation.ChooseCharacterActivity"
            android:label="@string/title_activity_choose_character"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.gradugation.HowToPlayActivity"
            android:label="@string/title_activity_how_to_play" >
        </activity>
        <activity
            android:name="com.gradugation.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.gradugation.MinigamesActivity"
            android:label="@string/title_activity_minigames"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.gradugation.WiresMiniGame"
            android:label="@string/title_activity_wires_mini_game"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.gradugation.ContinueActivity"
            android:label="@string/title_activity_continue" >
        </activity>
        <activity
            android:name="com.gradugation.BenchPressMinigame"
            android:label="@string/title_activity_bench_press_minigame"
            android:screenOrientation="portrait" >
        </activity>

        <service android:name="com.gradugation.BackgroundMusicService" >
        </service>

        <activity
            android:name="com.gradugation.MainGameScreen"
            android:label="@string/title_activity_main_game_screen" >
        </activity>
        <activity
            android:name="com.gradugation.BalanceMinigame"
            android:label="@string/title_activity_balance_minigame" >
        </activity>
        <activity
            android:name="com.gradugation.WhackAFlyerGame"
            android:label="@string/title_activity_whack_aflyer" >
        </activity>
    </application>

</manifest>