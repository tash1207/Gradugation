<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gator_blue" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2040B8"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity" >

        <TextView
            android:id="@+id/gradugation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="#E67022"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/how_many_player_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="28dp"
            android:text="@string/how_many_players"
            android:textColor="#E67022"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/number_of_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="67dp"
            android:ems="2"
            android:enabled="false"
            android:focusable="false"
            android:gravity="center_vertical|right"
            android:inputType="number"
            android:text="1" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btn_continue_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_rectangle_orange"
            android:onClick="chooseCharacter"
            android:padding="14dp"
            android:text="@string/continue_game"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>